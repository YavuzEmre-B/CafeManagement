@model CafeManagement.Models.Receipt

<h1>Receipt Details</h1>

<div>
    <h4>Receipt</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Table ID</dt>
        <dd class="col-sm-10">@Model.TableId</dd>

        <dt class="col-sm-2">Product ID</dt>
        <dd class="col-sm-10">@Model.ProductId</dd>

        <dt class="col-sm-2">Purchase Date</dt>
        <dd class="col-sm-10">@Model.PurchaseDate.ToString("d")</dd>

        <dt class="col-sm-2">Quantity</dt>
        <dd class="col-sm-10">@Model.Quantity</dd>
    </dl>
</div>
<div>
    <a asp-controller="Receipt" asp-action="Index">Back to List</a>
</div>
